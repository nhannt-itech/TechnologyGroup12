@model TechnologyGroup12.Models.Models.Customer
@{
    var Title = "ADD CUSTOMER";

    if (Model.Id.ToString() != "00000000-0000-0000-0000-000000000000")
    {
        Title = "UPDATE CUSTOMER";
    }

    ViewData["Title"] = Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <!-- Nested Row within Card Body -->
    <div class="row">
        <div class="offset-3 col-lg-6 ">
            <div class="p-5">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">@Title</h1>
                </div>
                <form asp-controller="Customer" asp-action="Upsert" method="post" class="user">
                    <div class="form-group">
                        <input asp-for="Name" type="text" class="form-control" placeholder="Enter Your Name...">
                        <span asp-validation-for="Name" class="text-danger offset-1"></span>
                    </div>
                    <div class="row">
                        <div class="col-3 text-lg">
                            <label>Birthday:</label>
                        </div>
                        <div class="form-group col-9">
                            <input asp-for="Birth" type="datetime-local" class="form-control" placeholder="Password">
                            <span asp-validation-for="Birth" class="text-danger offset-1"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3 text-lg">
                            <label>Gender:</label>
                        </div>
                        <div class="form-group col-9">
                            <select asp-for="Gender" name="Gender" class="form-control">
                                <option value="Other">Other</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <input asp-for="Phone" type="text" class="form-control" placeholder="Enter Your Phone...">
                        <span asp-validation-for="Phone" class="text-danger offset-1"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Email" type="text" class="form-control" placeholder="Enter Your Email..."
                               data-val="true" data-val-remote="Email is Invalid."
                               data-val-remote-additionalfields="*.Email" data-val-remote-url="/Customer/CheckEmail"
                               id="Email" name="Email" value="">
                        <span asp-validation-for="Email" class="text-danger offset-1"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Address" type="text" class="form-control" placeholder="Enter Your Address...">
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox small">
                            <input type="checkbox" class="custom-control-input" id="customCheck">
                            <label class="custom-control-label" for="customCheck">Remember Me</label>
                        </div>
                    </div>

                    @if (Model.Id.ToString() == "00000000-0000-0000-0000-000000000000")
                    {
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            Add
                        </button>

                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            Update
                        </button>
                    }
                    <a asp-controller="Customer" asp-action="Index" class="btn btn-warning btn-user btn-block">
                        < Back To List
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

