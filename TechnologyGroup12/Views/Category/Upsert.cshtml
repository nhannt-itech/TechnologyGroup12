@model TechnologyGroup12.Models.Models.Category
@{
    var Title = "ADD JOB";

    if (Model.Id != 0)
    {
        Title = "UPDATE JOB";
    }

    ViewData["Title"] = Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <!-- Nested Row within Card Body -->
    <div class="row">
        <div class="offset-3 col-lg-6 ">
            <div class="p-5">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">@Title</h1>
                </div>
                <form method="post" class="user">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-3 text-lg">
                            <label>Name:</label>
                        </div>
                        <div class="form-group col-9">
                            <input asp-for="Name" type="text" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3 text-lg">
                            <label>Category Id:</label>
                        </div>
                        <div class="form-group col-9">
                            <input asp-for="CategoryId" type="text" class="form-control">
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    @if (Model.Id == 0)
                    {
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            Add
                        </button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            Update
                        </button>
                    }
                    <a asp-controller="Category" asp-action="Index" class="btn btn-warning btn-user btn-block">
                        < Back To List
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>