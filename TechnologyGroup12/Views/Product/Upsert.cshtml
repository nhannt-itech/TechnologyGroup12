@model TechnologyGroup12.Models.Models.Product
@{
    var Title = "ADD PRODUCT";

    if (Model.Id != 0)
    {
        Title = "UPDATE PRODUCT";
    }

    ViewData["Title"] = Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    Model.OnSale = true;
}

<div class="container" enctype="multipart/form-data">
    <!-- Nested Row within Card Body -->
    <div class="row">
        <div class="col-lg-7 ">
            <div class="p-5">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">@Title</h1>
                </div>
                <form method="post" class="user" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Id" type="text" class="form-control" hidden>
                        <input asp-for="ImgUrl" type="text" class="form-control" hidden>
                    </div>
                    <div class="row">
                        <div class="col-4 text-lg">
                            <label>Name:</label>
                        </div>
                        <div class="form-group col-8">
                            <input asp-for="Name" type="text" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-lg">
                            <label>Description:</label>
                        </div>
                        <div class="form-group col-8">
                            <input asp-for="Description" type="text" class="form-control">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3 text-lg">
                            <label>Image:</label>
                        </div>
                        <div class="form-group col-9">
                            <input type="file" name="files" id="uploadBox" multiple class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-lg">
                            <label>Number In Stock:</label>
                        </div>
                        <div class="form-group col-8">
                            <input asp-for="NumberInStock" type="number" class="form-control">
                            <span asp-validation-for="NumberInStock" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-lg">
                            <label>Price: </label>
                        </div>
                        <div class="form-group col-8">
                            <input asp-for="Price" type="number" class="form-control">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3 text-lg">
                            Category:
                        </div>
                        <div class="form-group col-9">
                            @Html.DropDownListFor(m => m.CategoryId, Model.CategoryList, "-Select a Category",
                           new { @class = "form-control" })
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3 text-lg">
                            Manufacturer:
                        </div>
                        <div class="form-group col-9">
                            @Html.DropDownListFor(m => m.ManufacturerId, Model.ManufacturerList, "-Select a Manufacturer",
                           new { @class = "form-control" })
                            <span asp-validation-for="ManufacturerId" class="text-danger"></span>
                        </div>
                    </div>

                    @if (Model.Id == 0)
                    {
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            Add
                        </button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            Update
                        </button>
                    }
                    <a asp-controller="Product" asp-action="Index" class="btn btn-warning btn-user btn-block">
                        < Back To List
                    </a>
                </form>

            </div>
        </div>
        @if (Model.ImgUrl == null)
        {
            <div class="col-lg-5" style="padding-top:100px">
                <img src="https://img.cosmostore.org/templates/cosmostore_new/images/no-photo.jpg" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
            </div>
        }
        else
        {
            <div class="col-lg-5" style="padding-top:100px">
                <img src="@Model.ImgUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9 ;height:400px" />
            </div>
        }
    </div>
</div>

